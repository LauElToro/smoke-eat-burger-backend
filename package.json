  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "decimal.js": "^10.4.3",
    "jose": "^5.9.6",
    "luxon": "^3.5.0",
    "mysql2": "^3.11.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "prisma": "^6.15.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
