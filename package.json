{
  "name": "smokeeat-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "prisma": "prisma",
    "seed": "node prisma/seed.js",
    "test": "vitest --run",
    "pretest": "prisma migrate deploy || prisma db push --accept-data-loss && npm run seed",
